<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 text-center">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
      <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>


    <% @blogs.each do |blog| %>
    <div class="row">
     <div class="blogimage">
        <div class="field">
          <% if blog.user.avatar? %>
          <%= image_tag(blog.user.avatar) %>
          <% else %>
          <%= image_tag(blog.user.image_url) %>
          <% end %>
        </div>
    </div>
    <div class="blogtitle">
    <%= link_to blog_path(blog) do %>
      <h4><strong><%= blog.title %></strong></h4>
    <% end %>
      <p><%= blog.content %></p>
      <p>#ユーザーID : <%= blog.user_id %></p>
      <p>#YOU: <%= blog.user.name %></p>
      <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    </div>
    <% end %>
  </div>
</div>

 <div id="page-top-btn-blog" class="page-top-btn-blog">
      <p><a class="move-page-top-blog" id="move-page-top-blog">▲</a></p>
      </div>